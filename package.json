{
  "name": "mysql_nodejs",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "data": "node sample_data.js",
    "test": "mocha ./test/test.js --timeout 10000 --exit",
    "cover": "istanbul cover _mocha",
    "test:coverage": "mocha ./test/test.js --timeout 10000 --exit",
    "_comment": "Note: --exit in the test element is to force the test program to exit after finishing in case we use done()",
    "coverage": "nyc --reporter=lcov --reporter=text-lcov npm test ",
    "coveralls": "nyc --reporter=lcov --reporter=text-lcov npm test | coveralls",
    "lint": "eslint '**/*.js'",
    "lint:fix": "prettier-eslint  '**/*.js' --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "nyc": {
    "_comment": "Purpose of this part: to do code coverage within Mocha/Chai using Istanbul",
    "register": "babel-register",
    "include": [
      "**/*.js",
      "./*.js"
    ],
    "exclude": [
      "**/node_modules/**",
      "**/test/**",
      "**/coverage/**",
      "**/sample_data.js",
      "**/index.js"
    ],
    "all": true
  },
  "author": "willywax",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.3",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "express": "^4.16.4",
    "istanbul": "^0.4.5",
    "mocha": "^6.0.2",
    "mysql": "^2.16.0",
    "nyc": "^13.3.0"
  },
  "devDependencies": {
    "coveralls": "^3.0.3",
    "eslint": "^5.15.3",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.3.1",
    "jscoverage": "^0.6.0",
    "lint-staged": ">=8",
    "mocha-lcov-reporter": "^1.3.0",
    "nodeunit": "^0.11.3",
    "prettier-eslint": "^8.8.2",
    "prettier-eslint-cli": "^4.7.1"
  }
}
